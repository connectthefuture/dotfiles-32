#!/bin/bash
options=(
  'notebook'
  'DELL'
  'DELL-main'
  'DELL-DVI'
  'HDMI'
  'VGA'
  'extend-right'
  'extend-left'
  'HDMI-left'
  'HDMI-main'
)

notebook_output=$( xrandr | head -n2 | tail -n1 | awk '{ print $1 }' )
hdmi_output=$( xrandr | grep HDMI | head -n1 | awk '{ print $1 }' )
dvi_output=$( xrandr | grep 'DVI.* connected' | head -n1 | awk '{ print $1 }' )
vga_output=VGA1

select_display() {
  case $1 in
    notebook )
      xrandr --output $notebook_output --auto --output $hdmi_output --off --output $vga_output --off ;;
    HDMI )
      xrandr --output $hdmi_output --auto --output $notebook_output --off --output $vga_output --off --output $dvi_output --off ;;
    DELL )
      xrandr --newmode "2560x1440" 220.812 2560 2608 2640 2720 1440 1443 1448 1478 -hsync -vsync
      xrandr --addmode $hdmi_output "2560x1440"
      xrandr --output $hdmi_output --mode 2560x1440 --output $notebook_output --off --output $vga_output --off --output $dvi_output --off ;;
    DELL-main )
      xrandr --newmode "2560x1440" 220.812 2560 2608 2640 2720 1440 1443 1448 1478 -hsync -vsync
      xrandr --addmode $hdmi_output "2560x1440"
      xrandr --output $hdmi_output --mode 2560x1440 --output $notebook_output --auto --below $hdmi_output --output $dvi_output --off ;;
    DELL-DVI )
      xrandr --newmode "2560x1440" 220.812 2560 2608 2640 2720 1440 1443 1448 1478 -hsync -vsync
      xrandr --addmode $hdmi_output "2560x1440"
      xrandr --output $hdmi_output --mode 2560x1440 --output $notebook_output --off --output $dvi_output --auto --right-of $hdmi_output  ;;
    DELL-DP )
      xrandr --newmode "2560x1440" 220.812 2560 2608 2640 2720 1440 1443 1448 1478 -hsync -vsync
      xrandr --addmode DisplayPort-0 "2560x1440"
      xrandr --output DisplayPort-0 --mode 2560x1440 ;;
    VGA )
      xrandr --output $vga_output --auto --output $notebook_output --off ;;
    extend-right )
      xrandr --output $notebook_output --auto --output $hdmi_output --auto --right-of $notebook_output ;;
    extend-left )
      xrandr --output $notebook_output --auto --output $hdmi_output --auto --left-of $notebook_output ;;
    HDMI-left )
      xrandr --output $hdmi_output --auto --output $notebook_output --auto --left-of $hdmi_output ;;
    HDMI-main )
      xrandr --output $hdmi_output --auto --output $notebook_output --auto --pos 1920x1080 ;;
  esac
}

if [[ $1 ]]; then
  select_display "$1"
else
  select_display "$( printf "%s\n" "${options[@]}" | rofi -dmenu -i -p 'â†  ' )"
fi
