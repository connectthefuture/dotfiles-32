#!/bin/bash
options=(
  'notebook'
  'DELL'
  'DELL-main'
  'HDMI'
  'VGA'
  'extend-right'
  'extend-left'
  'HDMI-left'
  'HDMI-main'
)

select_display() {
  case $1 in
    notebook )
      xrandr --output eDP1 --auto --output HDMI1 --off --output VGA1 --off ;;
    HDMI )
      xrandr --output HDMI1 --auto --output eDP1 --off --output VGA1 --off ;;
    DELL )
      xrandr --newmode "2560x1440" 220.812 2560 2608 2640 2720 1440 1443 1448 1478 -hsync -vsync
      xrandr --addmode HDMI1 "2560x1440"
      xrandr --output HDMI1 --mode 2560x1440 --output eDP1 --off --output VGA1 --off ;;
    DELL-main )
      xrandr --newmode "2560x1440" 220.812 2560 2608 2640 2720 1440 1443 1448 1478 -hsync -vsync
      xrandr --addmode HDMI1 "2560x1440"
      xrandr --output HDMI1 --mode 2560x1440 --output eDP1 --auto --pos 2560x1440 ;;
    DELL-DP )
      xrandr --newmode "2560x1440" 220.812 2560 2608 2640 2720 1440 1443 1448 1478 -hsync -vsync
      xrandr --addmode DisplayPort-0 "2560x1440"
      xrandr --output DisplayPort-0 --mode 2560x1440 ;;
    VGA )
      xrandr --output VGA1 --auto --output eDP1 --off ;;
    extend-right )
      xrandr --output eDP1 --auto --output HDMI1 --auto --right-of eDP1 ;;
    extend-left )
      xrandr --output eDP1 --auto --output HDMI1 --auto --left-of eDP1 ;;
    HDMI-left )
      xrandr --output HDMI1 --auto --output eDP1 --auto --left-of HDMI1 ;;
    HDMI-main )
      xrandr --output HDMI1 --auto --output eDP1 --auto --pos 1920x1080 ;;
  esac
}

if [[ $1 ]]; then
  select_display "$1"
else
  if xrandr | grep -q DisplayPort; then
    select_display "DELL-DP"
  else
    select_display "$( printf "%s\n" "${options[@]}" | rofi -dmenu -i -p 'â†  ' )"
  fi
fi
