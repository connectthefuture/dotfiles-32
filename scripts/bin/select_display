#!/bin/bash
options=(
  'notebook'
  'HDMI'
  'HDMI-DVI'
  'VGA'
)

notebook_output=$( xrandr | head -n2 | tail -n1 | awk '{ print $1 }' )
hdmi_output=$( xrandr | grep HDMI | head -n1 | awk '{ print $1 }' )
dvi_output=$( xrandr | grep 'DVI.* connected' | head -n1 | awk '{ print $1 }' )
vga_output=VGA1

echo $hdmi_output
echo $dvi_output

select_display() {
  case $1 in
    notebook )
      xrandr --output $notebook_output --auto --output $hdmi_output --off --output $vga_output --off ;;
    HDMI )
      xrandr --output $hdmi_output --auto --primary --output $vga_output --off --output $dvi_output --off ;;
    HDMI-DVI )
      xrandr --output $hdmi_output --auto --primary --output $dvi_output --auto --right-of $hdmi_output  ;;
    VGA )
      xrandr --output $vga_output --auto --output $notebook_output --off ;;
  esac
}

if [[ $1 ]]; then
  select_display "$1"
else
  select_display "$( printf "%s\n" "${options[@]}" | rofi -dmenu -i -p 'â†  ' )"
fi
