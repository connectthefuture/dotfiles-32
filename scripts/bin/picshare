#!/bin/bash
file_name=$1
if [[ -v $2 ]]; then
  target_name=$2
else
  target_name=$( basename $1 )
fi

# copy
scp "$file_name" mreq:"screenshots/$target_name"
# clipboard
echo "http://s.mreq.eu/$target_name" | xclip -sel clip
# notify
notify-send -i plugin-screenshot "scrotshare" "Picture URL copied to clipboard."
