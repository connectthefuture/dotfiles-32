# reload the configuration file
#bindsym $m+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $m+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $m+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode $ico_resize {
  bindsym $left       resize shrink width 20 px or 1 ppt
  bindsym $down       resize grow height 20 px or 1 ppt
  bindsym $up         resize shrink height 20 px or 1 ppt
  bindsym $right      resize grow width 20 px or 1 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $m+r mode $ico_resize

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# sound
bindsym XF86AudioRaiseVolume exec  --no-startup-id amixer -D pulse sset Master 5%+ unmute;
bindsym XF86AudioLowerVolume exec  --no-startup-id amixer -D pulse sset Master 5%- unmute;
bindsym XF86AudioMute exec  --no-startup-id amixer -D pulse set Master 1+ toggle;
bindsym Pause exec "play_pause_spotify"
bindsym Shift+Pause exec "play_pause_spotify next"
bindsym Control+Shift+Pause exec "play_pause_spotify prev"

bar {
  status_command i3blocks
  tray_output eDP1
  output eDP1
  position top
  height 24
  colors {
    background $base00
    statusline $base07
    separator  $base02
    # name               border   background  font_color
    focused_workspace    $base03  $base03     $base0B
    active_workspace     $base00  $base00     $base05
    inactive_workspace   $base00  $base00     $base05
    urgent_workspace     $base08  $base08     $base07
    binding_mode         $base0E  $base0E     $base01
  }
}

bar {
  status_command i3blocks
  tray_output HDMI1
  output HDMI1
  position top
  height 24
  colors {
    background $base00
    statusline $base07
    separator  $base02
    # name               border   background  font_color
    focused_workspace    $base05  $base05     $base01
    active_workspace     $base00  $base00     $base05
    inactive_workspace   $base00  $base00     $base05
    urgent_workspace     $base08  $base08     $base07
    binding_mode         $base0E  $base0E     $base01
  }
}

