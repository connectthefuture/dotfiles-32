# exit i3 (logs you out of your X session)
bindsym $m+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode $ico_resize {
  bindsym $left       resize shrink width  10 px or 1 ppt
  bindsym $down       resize grow   height 10 px or 1 ppt
  bindsym $up         resize shrink height 10 px or 1 ppt
  bindsym $right      resize grow   width  10 px or 1 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $m+r mode $ico_resize

# move window
mode $ico_move {
  bindsym $left       move left  10 px
  bindsym $down       move down  10 px
  bindsym $up         move up    10 px
  bindsym $right      move right 10 px

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $m+u mode $ico_move

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# sound
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ unmute;
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- unmute;
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle;
bindsym $m+KP_Add exec --no-startup-id amixer -D pulse sset Master 5%+ unmute;
bindsym $m+KP_Subtract exec --no-startup-id amixer -D pulse sset Master 5%- unmute;
bindsym $m+KP_Multiply exec --no-startup-id amixer -D pulse set Master 1+ toggle;
bindsym Pause exec "play_pause_spotify"
bindsym Shift+Pause exec "play_pause_spotify next"
bindsym Control+Shift+Pause exec "play_pause_spotify prev"

bar {
  status_command i3blocks
  tray_output HDMI-0
  output HDMI-0
  output DVI-1
  position top
  colors {
    background $base00
    statusline $base07
    separator  $base02
    # name               border   background  font_color
    focused_workspace    $base0D  $base0D     $base07
    active_workspace     $base00  $base00     $base05
    inactive_workspace   $base00  $base00     $base05
    urgent_workspace     $base08  $base08     $base07
    binding_mode         $base0E  $base0E     $base01
  }
}

bar {
  status_command i3blocks
  tray_output LVDS1
  output LVDS1
  output VGA1
  position top
  colors {
    background $base00
    statusline $base07
    separator  $base02
    # name               border   background  font_color
    focused_workspace    $base0D  $base0D     $base07
    active_workspace     $base00  $base00     $base05
    inactive_workspace   $base00  $base00     $base05
    urgent_workspace     $base08  $base08     $base07
    binding_mode         $base0E  $base0E     $base01
  }
}

